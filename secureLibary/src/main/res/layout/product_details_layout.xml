<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/app_color" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:scaleType="fitXY" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/kohinoor_devanagari_regular"
                        android:text="Product Name : "
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/kohinoor_devanagari_regular"
                        android:text=""
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text="@string/wiring_and_backplate"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/wiringBackplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text=""
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text="@string/instructions"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text=" "
                android:textSize="12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text="@string/wiring_diagram"
                android:textSize="14dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle_gray_border"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/earth"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="E"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/earth"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="Earth"
                            android:textColor="@color/black"
                            android:textSize="8dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/neutral"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="N"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/neutral"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Neutr."
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/live"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="L"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/live"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="Live"
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_four_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/hw_off"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt_pair4"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/hw_off"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_five_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/ch_off"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt_pair5"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/ch_off"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_six_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/hw_on"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt_pair6"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/hw_on"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_seven_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/four"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="4"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:id="@+id/txt_pair7"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/four"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_eight_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/five"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:id="@+id/txt_pair8"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/five"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_nine_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/six"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:id="@+id/txt_pair9"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/six"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/bottom_Pair_ten_Layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/seven"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/circle"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text="7"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <TextView
                            android:id="@+id/txt_pair10"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:layout_below="@+id/seven"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/kohinoor_devanagari_regular"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="8dp" />


                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/kohinoor_devanagari_regular"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text="@string/guided_installation"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/redirectLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:autoLink="web"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text="Install ChannelPlus XL"
                android:textColor="@color/light_blue"
                android:textSize="14dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/kohinoor_devanagari_regular"
                android:text="The link will redirect you to the secure webpage "
                android:textSize="12dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>